{
  "name": "bellemont-full-site",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "develop:cms": "npm run --prefix api develop",
    "develop:frontend": "wait-on http://localhost:1337/admin && API_URL=http://localhost:1337 npm run --prefix app develop",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "build:cms:gcloud": "npm run --prefix cms build:gcloud",
    "deploy:cms:gcloud": "npm run --prefix cms deploy:gcloud",
    "build:frontend": "npm run --prefix app build"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "wait-on": "5.2.1",
    "cross-env": "7.0.3"
  }
}
