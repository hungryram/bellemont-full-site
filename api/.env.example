HOST=0.0.0.0
PORT=1317

# Database (Railway Postgres)
DATABASE_HOST=your-railway-host.railway.app
DATABASE_PORT=5432
DATABASE_NAME=railway
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-railway-password
DATABASE_SSL=true

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=bellemont-storage
R2_PUBLIC_URL=https://your-custom-domain.com

# GitHub Deploy Plugin
GITHUB_TOKEN=your-github-token

# Admin JWT Secrets (generate new ones)
ADMIN_JWT_SECRET=generate-a-new-secret-here
JWT_SECRET=generate-a-new-secret-here
